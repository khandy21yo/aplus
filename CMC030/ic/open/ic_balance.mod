			IC_BALANCE::CLASS, &
			IC_BALANCE::RECTYPE &
		)	DUPLICATES , &
		ALTERNATE KEY &
		( &
			IC_BALANCE::BATCH, &
			IC_BALANCE::PRODUCT &
		)	DUPLICATES CHANGES, &
		ALTERNATE KEY &
		( &
			IC_BALANCE::LOCATION, &
			IC_BALANCE::PRODUCT &
		)	DUPLICATES CHANGES, &
		ALTERNATE KEY &
		( &
			IC_BALANCE::PERIOD, &
			IC_BALANCE::RECTYPE, &
			IC_BALANCE::CLASS &
		)	DUPLICATES CHANGES, &
		ACCESS MODIFY, ALLOW MODIFY

