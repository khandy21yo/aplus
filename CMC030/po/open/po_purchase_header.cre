	OPEN PO_PURCHASE_HEADER.NAME$ AS FILE PO_PURCHASE_HEADER.CH%, &
		ORGANIZATION INDEXED FIXED, &
		MAP PO_PURCHASE_HEADER, &
		PRIMARY KEY &
			PO_PURCHASE_HEADER::PO_NUM, &
		ACCESS MODIFY, ALLOW MODIFY

	CALL WRIT_CURPROTECTION(OLD_PROT$, STAT%)

