	!======================================================================
	! PO_PURCHASE_HEADER file (create, open read/write)
	!======================================================================

	CALL ASSG_CHANNEL(PO_PURCHASE_HEADER.CH%, STAT%)
	CALL READ_DEVICE('PO_PURCHASE_HEADER',PO_PURCHASE_HEADER.DEV$, STAT%)
	CALL READ_PROTECTION('PO_PURCHASE_HEADER',PO_PURCHASE_HEADER.PRO$,STAT%)
	CALL READ_CURPROTECTION(OLD_PROT$,STAT%)
	CALL WRIT_CURPROTECTION(PO_PURCHASE_HEADER.PRO$, STAT%)

