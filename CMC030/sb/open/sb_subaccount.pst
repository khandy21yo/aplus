	!======================================================================
	! SB_SUBACCOUNT file (create, modify, allow read)
	!======================================================================

	CALL ASSG_CHANNEL(SB_SUBACCOUNT.CH%, STAT%)
	CALL READ_DEVICE('SB_SUBACCOUNT',SB_SUBACCOUNT.DEV$, STAT%)
	CALL READ_PROTECTION('SB_SUBACCOUNT',SB_SUBACCOUNT.PRO$,STAT%)
	CALL READ_CURPROTECTION(OLD_PROT$,STAT%)
	CALL WRIT_CURPROTECTION(SB_SUBACCOUNT.PRO$, STAT%)

	SB_SUBACCOUNT.NAME$ = SB_SUBACCOUNT.DEV$+"SB_SUBACCOUNT.MAS"

	OPEN SB_SUBACCOUNT.NAME$ AS FILE SB_SUBACCOUNT.CH%, &
		ORGANIZATION INDEXED FIXED, &
		MAP SB_SUBACCOUNT, &
		BUFFER 32%, &
		PRIMARY KEY &
		( &
			SB_SUBACCOUNT::SUBJECT, &
			SB_SUBACCOUNT::SUBACCOUNT &
		)	, &
		ALTERNATE KEY &
		( &
			SB_SUBACCOUNT::SUBJECT, &
			SB_SUBACCOUNT::TTYPE, &
			SB_SUBACCOUNT::SUBACCOUNT &
		)	CHANGES, &
		ALTERNATE KEY &
		( &
			SB_SUBACCOUNT::SUBJECT, &
			SB_SUBACCOUNT::CLASS, &
			SB_SUBACCOUNT::SUBACCOUNT &
		)	CHANGES, &
		ACCESS MODIFY, ALLOW READ

	CALL WRIT_CURPROTECTION(OLD_PROT$, STAT%)

