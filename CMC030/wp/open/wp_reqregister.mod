		( &
			WP_REQREGISTER::REQNUM, &
			WP_REQREGISTER::REQLIN, &
			WP_REQREGISTER::JOB, &
			WP_REQREGISTER::LLINE, &
			WP_REQREGISTER::RECTYP &
		)	DUPLICATES CHANGES, &
		ALTERNATE KEY &
		( &
			WP_REQREGISTER::PRODUCT, &
			WP_REQREGISTER::LOCATION, &
			WP_REQREGISTER::JOB, &
			WP_REQREGISTER::REQNUM, &
			WP_REQREGISTER::RECTYP &
		)	DUPLICATES CHANGES, &
		ALTERNATE KEY &
		( &
			WP_REQREGISTER::BATCH, &
			WP_REQREGISTER::JOB &
		)	DUPLICATES CHANGES, &
		ACCESS MODIFY, ALLOW MODIFY

